{
  "name": "gallerypia-nft-platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=gallerypia-production --local --ip 0.0.0.0 --port 3000",
    "build:css": "node build-css.js && node extract-critical-css.cjs",
    "build": "npm run build:css && vite build && cp public/*.html dist/ 2>/dev/null || true && cp public/_headers dist/ 2>/dev/null || true && cp public/service-worker.js dist/service-worker.js 2>/dev/null || true && cp public/static/styles.css dist/static/styles.css 2>/dev/null || true && cp public/static/critical.css dist/static/critical.css 2>/dev/null || true",
    "preview": "wrangler pages dev dist",
    "deploy": "npm run build && wrangler pages deploy dist --project-name gallerypia",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply gallerypia-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply gallerypia-production",
    "db:seed": "wrangler d1 execute gallerypia-production --local --file=./seed.sql",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local && npm run db:seed",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "backup": "./scripts/backup-d1.sh",
    "restore": "./scripts/restore-d1.sh"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "hono": "^4.10.5",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@vitest/ui": "^4.0.13",
    "autoprefixer": "^10.4.22",
    "c8": "^10.1.3",
    "happy-dom": "^20.0.10",
    "playwright": "^1.57.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "terser": "^5.44.1",
    "vite": "^6.3.5",
    "vitest": "^4.0.13",
    "wrangler": "^4.4.0"
  }
}
