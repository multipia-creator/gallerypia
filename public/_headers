# Cache Control for Static Assets
/static/*
  Cache-Control: public, max-age=31536000, immutable

# Cache Control for Images
/static/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/static/*.png
  Cache-Control: public, max-age=31536000, immutable
/static/*.webp
  Cache-Control: public, max-age=31536000, immutable

# Cache Control for CSS/JS (shorter cache for easier updates)
