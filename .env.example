# GalleryPia v9.0 Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# =============================================================================
# Cloudflare Configuration
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_ZONE_ID=your_zone_id_here
PROJECT_NAME=gallerypia
CUSTOM_DOMAIN=gallerypia.com

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=production
PORT=3000
BASE_URL=https://gallerypia.com

# =============================================================================
# Security Configuration
# =============================================================================
JWT_SECRET=generate_with_openssl_rand_base64_32
JWT_REFRESH_SECRET=generate_with_openssl_rand_base64_32
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d
SESSION_SECRET=generate_with_openssl_rand_base64_32

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_NAME=gallerypia-production
DATABASE_ID=your_d1_database_id_here

# Database Connection
DB_CONNECTION_TIMEOUT=10000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# =============================================================================
# Notification Configuration
# =============================================================================
NOTIFICATION_EMAIL=admin@gallerypia.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# =============================================================================
# Monitoring Configuration
# =============================================================================
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_TRACKING=true

# Sentry (Optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_AI_VERIFICATION=true
ENABLE_ROYALTY_AUTOMATION=true
ENABLE_MUSEUM_PARTNERSHIPS=true
ENABLE_API_DOCS=true

# =============================================================================
# External API Configuration
# =============================================================================
OPENSEA_API_KEY=your_opensea_api_key_here
IPFS_GATEWAY=https://ipfs.io/ipfs/

# =============================================================================
# Development Configuration (Local Only)
# =============================================================================
DEV_ENABLE_CORS=true
DEV_ENABLE_DEBUG_LOGS=false
